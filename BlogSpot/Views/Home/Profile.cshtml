@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http;
<div class="text-center">
    <h1 class="display-4">Profile</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 m-auto bg-white p-3 my-3">
            <div class="row my-3">
                <div class="col ">
                    <label class="form-label">User ID</label>
                    <input type="number" class="form-control" value=@Context.Session.GetInt32("user_id") readonly>
                </div>
                <div class="col">
                    <label class="form-label">Date Of Birth</label>
                    <input type="text" class="form-control"  value=@Context.Session.GetString("user_dob") readonly>
                </div>
            </div>
            <div class="row my-3">
                <div class="col ">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control"  value=@Context.Session.GetString("user_name") readonly>

                </div>
                <div class="col">
                    <label class="form-label"></label> <br />
                    <input class="form-control"  type="text" value=@Context.Session.GetString("user_gender") readonly>

                </div>
            </div>
            <div class="row my-3">
                <div class="col ">
                    <label class="form-label">Email</label>
                    <input  class="form-control" type="text" value=@Context.Session.GetString("user_email") readonly>
                </div>
            </div>
        </div>
    </div>
</div>
